<Window x:Class="MyPlanner.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPlanner"
        mc:Ignorable="d"
        Title="NewProject" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название проекта -->
        <Label Content="Название проекта:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtProjectName" Grid.Row="0" Margin="150,0,0,0" Width="120"/>

        <!-- Описание проекта -->
        <Label Content="Описание проекта:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtProjectDescription" Grid.Row="1" Margin="150,0,0,0" Width="120"/>

        <!-- Дедлайн проекта -->
        <Label Content="Дедлайн:" Grid.Row="2" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpDeadline" Grid.Row="2" Margin="150,0,0,0" Width="120"/>

        <!-- Приоритет -->
        <Label Content="Приоритет:" Grid.Row="3" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbPriority" Grid.Row="3" Margin="150,0,0,0" Width="120">
            <ComboBoxItem Content="Low"/>
            <ComboBoxItem Content="Medium"/>
            <ComboBoxItem Content="High"/>
            <ComboBoxItem Content="Urgently"/>
        </ComboBox>

        <!-- Категория -->
        <Label Content="Категория:" Grid.Row="4" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbCategory" Grid.Row="4" Margin="150,0,0,0" Width="120">
            <ComboBoxItem Content="None"/>
            <ComboBoxItem Content="Home"/>
            <ComboBoxItem Content="Work"/>
            <ComboBoxItem Content="Hobby"/>
            <ComboBoxItem Content="Friends"/>
            <ComboBoxItem Content="Health"/>
            <ComboBoxItem Content="Family"/>
            <ComboBoxItem Content="Relax"/>
            <ComboBoxItem Content="Travel"/>
            <ComboBoxItem Content="Celebrate"/>
            <ComboBoxItem Content="Education"/>
            <ComboBoxItem Content="Finance"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center">
            <Button Content="Создать" Width="80" Margin="5" Click="CreateButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
